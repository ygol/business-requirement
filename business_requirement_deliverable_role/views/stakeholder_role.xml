<odoo>



    <record model="ir.ui.view" id="stakeholder_role_tree_view">
        <field name="name">stakeholder.role.tree (in business_requirement_deliverable_role)</field>
        <field name="model">stakeholder.role</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="stakeholder_role_act_window">
        <field name="name">Stakeholder Role</field> <!-- TODO -->
        <field name="res_model">stakeholder.role</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="stakeholder_role_menu">
        <field name="name">Stakeholder Role</field>
        <field name="parent_id" ref="business_requirement.menu_business_configuration"/>
        <field name="action" ref="stakeholder_role_act_window"/>
        <field name="sequence" eval="12"/>
    </record>

</odoo>
